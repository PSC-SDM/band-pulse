# ===========================================
#  BandPulse - Variables de entorno
#  (centralizado para Docker Compose)
# ===========================================

# ---------- General ----------
NODE_ENV=development

# ---------- Puertos ----------
BACKEND_PORT=3001
FRONTEND_PORT=3000

# ---------- MongoDB ----------
MONGO_INITDB_ROOT_USERNAME=bandpulse
MONGO_INITDB_ROOT_PASSWORD=dev_password
MONGO_INITDB_DATABASE=bandpulse
MONGODB_URI=mongodb://bandpulse_app:dev_password@mongodb:27017/bandpulse

# ---------- JWT ----------
# Genera uno con: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long
JWT_EXPIRES_IN=7d

# ---------- OAuth - Google ----------
# Obtener en https://console.cloud.google.com
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# ---------- APIs externas ----------
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
BANDSINTOWN_APP_ID=bandpulse

# ---------- Cache TTL (segundos) ----------
ARTIST_CACHE_TTL=604800
EVENT_CACHE_TTL=86400

# ---------- CORS / URLs ----------
CORS_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ---------- Frontend (Next.js) ----------
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here
